<!DOCTYPE html>
<html>
<head>
  <title>Lesson4</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <!-- google fonts -->
  <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
</head>

<body>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <a class="navbar-brand" href="#">
      <img src="https://s.dou.ua/img/announces/RC-logo.png" width="150" height="30" alt="">
    </a>
    <div class="user-data-container">
      <p class="name"><%= @current_user.name %></p>
      <%= button_to('Logout', 'session/destroy', method: "delete", remote: true, class: 'btn btn-outline-light',
                    data: {confirm: 'Are you sure?', disable_with: 'loading...'}) %>
    </div>
  </div>
</nav>
<div class="hero">
  <div class="container">
    <%= yield %>
  </div>
</div>
</body>
</html>
